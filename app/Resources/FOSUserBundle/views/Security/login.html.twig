{% extends "FOSUserBundle::layout.html.twig" %}

{% block fos_user_content %}
<div class="container">
    <div class="row login">
        <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 well">
            <form role="form" action="{{ path('fos_user_security_check') }}" method="post">
              <div class="form-group text-center">
                <div class="logo">
                    <span class="glyphicon glyphicon-leaf set-logo"></span>
                </div>
              </div>
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
              <div class="form-group">
                <input name="_username" type="text" class="form-control input-lg" id="userid" placeholder="Adresse email" value="{{ last_username }}" >
              </div>
              <div class="form-group">
                <input name="_password" type="password" class="form-control input-lg" id="password" placeholder="Mot de passe">
              </div>
              <div class="form-group">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" />
                <button type="submit" class="btn btn-default btn-lg btn-block btn-success">Valider</button>
              </div>
              <div class="form-group last-row">
                <label class="checklabel">
                    <input id="remember_me" type="checkbox" name="_remember_me"><label for="remember_me"> Se souvenir de moi</label>
                </label>
                <a href="{{ path('fos_user_resetting_request') }}" class="pull-right">Mot de passe oubli√© ?</a>
              </div>
            </form>
        </div>
    </div>
</div>
{% endblock fos_user_content %}
